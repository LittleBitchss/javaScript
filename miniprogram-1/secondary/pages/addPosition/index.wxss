/* secondary/pages/addPosition/index.wxss */
.addPosition{
  height: 100vh;
}
.addPosition .tops{
  height: 174rpx;
  overflow: hidden;
}
.addPosition .title{
  font-size: 45rpx;
  font-family: 'Bold';
  line-height: 1;
  margin: 68rpx 50rpx 16rpx;
  display: flex;
  justify-content: space-between;
}
.addPosition .title .title_right{
  font-size: 35rpx;
}
.addPosition .title .title_right .title_right_color{
  color: #4768f3;
}
.addPosition .explain{
  font-size: 25rpx;
  font-family: 'Regular';
  margin: 0 50rpx 22rpx;
  line-height: 1;
  color: #f14c44;
}
.addPosition .list{
  height: calc(100vh - 174rpx);
  padding-bottom: 30rpx;
  overflow: scroll;
}
.addPosition .list .item{
  margin: 0 50rpx;
  height: 140rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.addPosition .list .item .cont{
  flex: 1;
  font-family: 'Medium';
}
.addPosition .list .item .cont .top{
  font-size: 30rpx;
}
.addPosition .list .item .cont .bottom{
  color: #5f5f5f;
  font-size: 22rpx;
}
.addPosition .list .item .arrow{
  width: 14rpx;
  height: 24rpx;
}
.addPosition .list .adds{
  height: 122rpx;
  margin: 0 50rpx;
  border: 4rpx dashed #4768f3;
  border-radius: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.addPosition .list .adds .add{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #4768f3;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 28rpx;
}
.addPosition .list .adds .add .cross{
  width: 20rpx;
  height: 4rpx;
  background-color: #fff;
}
.addPosition .list .adds .add .vertical{
  width: 4rpx;
  height: 20rpx;
  position: absolute;
  background-color: #fff;
}
.addPosition .list .adds .txt{
  font-family: 'Medium';
  font-size: 30rpx;
  color: #4768f3;
}
.editPosition{
  height: 100vh;
  position: relative;
  overflow: hidden;
}
.editPosition .title{
  margin-top: 68rpx;
  padding: 0 50rpx;
  font-size: 45rpx;
  font-family: 'Bold';
}
.editPosition .item{
  height: 160rpx;
  margin: 0 20rpx;
  border-bottom: 2rpx solid #cfcfcf; 
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 30rpx;
}

.editPosition .item .item_titel{
  font-family: 'Medium';
  font-size: 30rpx;
}
.editPosition .item .items{
  font-family: 'Regular';
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
}
.editPosition .item .items .items_right{
  display: flex;
  align-items: center;
  border-top-left-radius: 5rpx;
  font-family: 'Medium';
  font-size: 30rpx;
  color: #4768f3;
}
.editPosition .item .items .items_right .full{
  width: 150rpx;
  height: 42rpx;
  border: 2rpx solid #4768f3;
  border-top-left-radius: 5rpx;
  border-bottom-left-radius: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.editPosition .item .items .items_right .part{
  width: 150rpx;
  height: 42rpx;
  border: 2rpx solid #4768f3;
  border-top-right-radius: 5rpx;
  border-bottom-right-radius: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.editPosition .item .items .items_right .active{
  color: #fff;
  background-color:  #4768f3;
}
.editPosition .item .items .item_left{
  color: #b6b6b6;
}
.editPosition .item .items .fontColor{
  color: #000;
}
.editPosition .item .items .items_img{
  width: 14rpx;
  height: 22rpx;
}
.editPosition_bottom{
  width: 100%;
  height: 140rpx;
  padding: 22rpx;
  align-items: center;
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  font-size: 35rpx;
  font-family: 'Regular';
}
.editPosition_bottom .cancel{
  height: 70rpx;
  width: 202rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 22rpx;
  background-color: #f0f0f0;
  border-radius: 5rpx;
}
.editPosition_bottom .save{
  flex: 1;
  height:70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #4768f3;
  border-radius: 5rpx;
  color: #fff;
}