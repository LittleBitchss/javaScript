/* secondary/pages/addPosition/index.wxss */
.addPosition{
  height: 100vh;
}
.addPosition .tops{
  height: 174rpx;
  overflow: hidden;
}
.addPosition .title{
  font-size: 45rpx;
  font-family: 'Bold';
  line-height: 1;
  margin: 68rpx 50rpx 16rpx;
  display: flex;
  justify-content: space-between;
}
.addPosition .title .title_right{
  font-size: 35rpx;
}
.addPosition .title .title_right .title_right_color{
  color: #4768f3;
}
.addPosition .explain{
  font-size: 25rpx;
  font-family: 'Regular';
  margin: 0 50rpx 22rpx;
  line-height: 1;
  color: #f14c44;
}
.addPosition .list{
  height: calc(100vh - 174rpx);
  padding-bottom: 30rpx;
  overflow: scroll;
}
.addPosition .list .item{
  margin: 0 50rpx;
  height: 140rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.addPosition .list .item .cont{
  flex: 1;
  font-family: 'Medium';
}
.addPosition .list .item .cont .top{
  font-size: 30rpx;
}
.addPosition .list .item .cont .bottom{
  color: #5f5f5f;
  font-size: 22rpx;
}
.addPosition .list .item .arrow{
  width: 14rpx;
  height: 24rpx;
}
.addPosition .list .adds{
  height: 122rpx;
  margin: 0 50rpx;
  border: 4rpx dashed #4768f3;
  border-radius: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.addPosition .list .adds .add{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #4768f3;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 28rpx;
}
.addPosition .list .adds .add .cross{
  width: 20rpx;
  height: 4rpx;
  background-color: #fff;
}
.addPosition .list .adds .add .vertical{
  width: 4rpx;
  height: 20rpx;
  position: absolute;
  background-color: #fff;
}
.addPosition .list .adds .txt{
  font-family: 'Medium';
  font-size: 30rpx;
  color: #4768f3;
}