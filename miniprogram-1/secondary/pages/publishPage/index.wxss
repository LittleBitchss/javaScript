/* secondary/pages/publishPage/index.wxss */
.publishPage{
  height: 100vh;
}
.publishPage .title{
  height: 110rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-family: 'Medium';
  font-size: 45rpx;
  margin: 0 30rpx;
}
.publishPage .title .titel_right{
  font-family: 'Regular';
  font-size: 22rpx;
}

.publishPage .course{
  position: relative;
  height: 86rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-family: 'Light';
  font-size: 20rpx;
  line-height: 1;
  margin: 0 30rpx;
}
.publishPage .course .course_item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.publishPage .course .course_midden{
  width: 556rpx;
  height: 2rpx;
  background-color: #f14d45;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translatex(-50%);
  margin-top: -19rpx;
}
.publishPage .course .course_item .outerRace{
  width: 29rpx;
  height: 29rpx;
  border-radius: 50%;
  background-color: #f14d45;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 13rpx;
}
.publishPage .course .course_item .insideTracks{
  width: 13rpx;
  height: 13rpx;
  border-radius: 50%;
  background-color: #f14d45;
  margin-bottom: 16rpx;
}
.publishPage .course .course_item .outerRace .insideTrack{
  width: 13rpx;
  height: 13rpx;
  border-radius: 50%;
  background-color: #fff;
}
.publishPage .item{
  height: 164rpx;
  margin: 0 22rpx;
  padding: 0 38rpx;
  border-bottom: 2rpx solid #cfcfcf;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.publishPage .item .item_title{
  font-family: 'Regular';
  font-size: 25rpx;
  margin-bottom: 30rpx;
}
.publishPage .item .item_inp .placeholder{
  color: #5f5f5f;
  font-size: 30rpx;
}
.publishPage .note{
  margin: 30rpx 60rpx 0;
  font-family: 'Regular';
  font-size: 18rpx;
  color: #5f5f5f;
}

.publishPage .bottom{
  height: 128rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 0;
  bottom: 0;
}

.publishPage .btn{
  height: 60rpx;
  width: 702rpx;
  background-color: #a3b3f9;
  color: #fff;
  font-family: 'Medium';
  font-size: 28rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
