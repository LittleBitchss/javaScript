/* secondary/pages/resumeInfo/index.wxss */
.list {
  height: 100vh;
  background-color: #f3f3f3;
}

.list .list_item {
  width: 722rpx;
  height: 186rpx;
  margin: 15rpx auto 15rpx;
  background-color: #fff;
  border-radius: 15rpx;
  display: flex;
  overflow: hidden;
}

.list_item .list_item1 {
  width: 212rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  
}
.list_item .list_item1 .list_item1_img{
  width: 138rpx;
  height: 138rpx;
  border-radius: 50%;
  background-image: url(https://qunyan.canancn.com/assets/applet/img/jobRecruitment/photo.png);
  background-size: 100% 100%;
  box-shadow: #0186fe 0rpx 0rpx 20rpx -8rpx;
}
.list_item .list_item2 {
  flex: 1;
  font-size: 22rpx;
  font-family: 'Regular';
  line-height: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.list_item .list_item2 .list_item2_name{
  font-size: 34rpx;
}
.list_item .list_item2 .list_item2_suffer{
  color: #5f5f5f;
  line-height: 40rpx;
  
}
.list_item .list_item2 .list_item2_state{
  color: #4768f3;
  margin-top: 10rpx;
}
.list_item .list_item3 {
  width: 122rpx;
  font-family: 'Medium';
  font-size: 22rpx;
  background-color: #dae1fd;
  display: flex;
  justify-content: center;
  align-items: center;
}

.list_item .list_item3 .list_item3_item {
  padding: 6rpx 12rpx;
  background-color: #eee;
  border-radius: 8rpx;
  line-height: 1;
  font-size: 18rpx;
  margin-right: 18rpx;
  font-family: 'Medium';
}

.list_item .list_item4 {
  height: 42rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-family: 'Medium';
}

.list_item .list_item4 .list_item4_left {
  display: flex;
  align-items: center;
  font-size: 18rpx;
}

.list_item .list_item4 .list_item4_left .photo {
  height: 42rpx;
  width: 42rpx;
  background-color: #4768f3;
  border-radius: 50%;
  display: block;
  margin-right: 14rpx;
}

.list_item .list_item4 .list_item4_right {
  font-size: 22rpx;
  color: #b6b6b6;
}