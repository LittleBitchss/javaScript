/* components/linkage/linkage.wxss */

.area-select-box {
  width: 750rpx;
  height: 100%;
  background: white;
  position: absolute;
  bottom: 0;
  left: 0;
}

.area-select-box .area-select-title {
  width: 100%;
  line-height: 80rpx;
  font-size: 34rpx;
  color: #7f7f7f;
  text-align: center;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.area-select-box .area-select-title .select-off {
  width: 100rpx;
  line-height: 80rpx;
}

.area-select-box .area-select-title .select-on {
  width: 100rpx;
  line-height: 80rpx;
  color: #07c160;
}

.area-select-box .area-select-btn {
  height: 60rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
  top: 0;
  left: 0;
  overflow: auto;
}

.area-select-box .area-select-btn .area-select-btn-item {
  height: 56rpx;
  white-space:nowrap;
  border-bottom: 4rpx solid white;
  font-size: 25rpx;
  line-height: 56rpx;
  color: #191919;
  padding: 0 10rpx;
}

.area-select-box .area-select-btn .area-select-btn-active {
  border-bottom: 4rpx solid #07c160;
  color: #07c160;
}

.area-select-box .area-select-btn:after {
  content: '';
  width: 100%;
  height: 1rpx;
  background: #e5e5e5;
  position: absolute;
  bottom: 0;
  left: 0;
}

.area-select-box .area-select-show {
  width: 750rpx;
  height: 660rpx;
}

.area-select-box .area-select-show .area-select-show-item {
  width: auto;
  padding: 0 26rpx;
  font-size: 25rpx;
  color: #7f7f7f;
  line-height: 76rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.area-select-box .area-select-show .area-select-show-item image {
  width: 28rpx;
  height: 20rpx;
  margin-left: 20rpx;
}