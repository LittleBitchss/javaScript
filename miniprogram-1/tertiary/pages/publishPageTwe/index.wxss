/* secondary/pages/publishPageTwe/index.wxss */
.publishPageTwe{
  height: 100vh;
}
.publishPageTwe .title{
  height: 110rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-family: 'Medium';
  font-size: 45rpx;
  margin: 0 30rpx;
}
.publishPageTwe .course{
  position: relative;
  height: 86rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-family: 'Light';
  font-size: 20rpx;
  line-height: 1;
  margin: 0 30rpx;
}
.publishPageTwe .course .course_item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.publishPageTwe .course .course_midden{
  width: 556rpx;
  height: 2rpx;
  background-color: #f14d45;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translatex(-50%);
  margin-top: -19rpx;
}
.publishPageTwe .course .course_item .outerRace{
  width: 29rpx;
  height: 29rpx;
  border-radius: 50%;
  background-color: #f14d45;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 13rpx;
}
.publishPageTwe .course .course_item .insideTracks{
  width: 13rpx;
  height: 13rpx;
  border-radius: 50%;
  background-color: #f14d45;
  margin-bottom: 16rpx;
}
.publishPageTwe .course .course_item .outerRace .insideTrack{
  width: 13rpx;
  height: 13rpx;
  border-radius: 50%;
  background-color: #fff;
}
.publishPageTwe .item{
  height: 164rpx;
  margin: 0 22rpx;
  padding: 0 38rpx;
  border-bottom: 2rpx solid #cfcfcf;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.publishPageTwe .item .item_title{
  font-family: 'Regular';
  font-size: 25rpx;
  margin-bottom: 22rpx;
}
.publishPageTwe .item .item_cont{
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #5f5f5f;
  font-family: 'Regular';
  font-size: 30rpx;
}
.publishPageTwe .item .item_cont .active{
  color: #000;
  font-family: 'Medium';
}
.publishPageTwe .item .item_cont .item_cont_img{
  width: 16rpx;
  height: 30rpx;
}




.publishPageTwe .bottom{
  height: 128rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 0;
  bottom: 0;
}

.publishPageTwe .btn{
  height: 60rpx;
  width: 702rpx;
  background-color: #a3b3f9;
  color: #fff;
  font-family: 'Medium';
  font-size: 28rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}


.page-container .keyWord{
  height: 100%;
  overflow: auto;
  padding-bottom: 138rpx;
}
.page-container .keyWord .title{
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  font-family: 'Medium';
  font-size: 45rpx;
  margin: 0 30rpx;
}
.page-container .keyWord .note{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  font-family: 'Medium';
  font-size: 20rpx;
  margin: 0 30rpx;
  color: #5f5f5f;
  margin-bottom: 46rpx;
}
.page-container .keyWord .item{
  margin: 0 45rpx;
}
.page-container .keyWord .item .item_title{
  font-family: 'Medium';
  font-size: 30rpx;
}
.page-container .keyWord .item .item_cont{
  padding: 0 0 34rpx 0;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.page-container .keyWord .item .item_cont .item_cont_item{
  width: 200rpx;
  height: 50rpx;
  border-radius: 5rpx;
  background-color: #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: 'Normal';
  font-size: 25rpx;
  margin: 35rpx 30rpx 0 0;
}
.page-container .keyWord .item .item_cont .active{
  background-color: #fff;
  border: 2rpx solid #4768f3;
}

.page-container .keyWord .item .item_cont .add{
  color: #4768f3;
}
.page-container .keyWord .item .item_cont .item_cont_item:nth-child(3n){
  margin-right: 0;
}


.page-container .keyWord .bottom{
  width: 100%;
  height: 138rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
  font-family: 'Regular';
  background-color: #fff;
  border-top: 2rpx solid #eee;
}
.page-container .keyWord .bottom .empty{
  width: 204rpx;
  height: 70rpx;
  border-radius: 5rpx;
  background-color: #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 28rpx;
}
.page-container .keyWord .bottom .confirm{
  width: 478rpx;
  height: 70rpx;
  border-radius: 5rpx;
  background-color: #4768f3;
  display: flex;
  color: #fff;
  justify-content: center;
  align-items: center;
}