/* tertiary/pages/editPosition/index.wxss */
.editPosition{
  height: 100vh;
  position: relative;
  overflow: hidden;
}
.editPosition .title{
  margin-top: 68rpx;
  padding: 0 50rpx;
  font-size: 45rpx;
  font-family: 'Bold';
}
.editPosition .item{
  height: 160rpx;
  margin: 0 20rpx;
  border-bottom: 2rpx solid #cfcfcf; 
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 30rpx;
}

.editPosition .item .item_titel{
  font-family: 'Medium';
  font-size: 30rpx;
}
.editPosition .item .items{
  font-family: 'Regular';
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
}
.editPosition .item .items .items_right{
  display: flex;
  align-items: center;
  border-top-left-radius: 5rpx;
  font-family: 'Medium';
  font-size: 30rpx;
  color: #4768f3;
}
.editPosition .item .items .items_right .full{
  width: 150rpx;
  height: 42rpx;
  border: 2rpx solid #4768f3;
  border-top-left-radius: 5rpx;
  border-bottom-left-radius: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.editPosition .item .items .items_right .part{
  width: 150rpx;
  height: 42rpx;
  border: 2rpx solid #4768f3;
  border-top-right-radius: 5rpx;
  border-bottom-right-radius: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.editPosition .item .items .items_right .active{
  color: #fff;
  background-color:  #4768f3;
}
.editPosition .item .items .item_left{
  color: #b6b6b6;
}
.editPosition .item .items .fontColor{
  color: #000;
}
.editPosition .item .items .items_img{
  width: 14rpx;
  height: 22rpx;
}
.editPosition_bottom{
  width: 100%;
  height: 140rpx;
  padding: 22rpx;
  align-items: center;
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  font-size: 35rpx;
  font-family: 'Regular';
}
.editPosition_bottom .cancel{
  height: 70rpx;
  width: 202rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 22rpx;
  background-color: #f0f0f0;
  border-radius: 5rpx;
}
.editPosition_bottom .save{
  flex: 1;
  height:70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #4768f3;
  border-radius: 5rpx;
  color: #fff;
}